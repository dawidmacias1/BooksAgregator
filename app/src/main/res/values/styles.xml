<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccentDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:bottomRightRadius">20dp</item>
        <item name="android:bottomLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:topLeftRadius">20dp</item>
    </style>

    <style name="AppTheme.OptionButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
        <item name="android:topLeftRadius">5dp</item>
    </style>

    <style name="AppTheme.SelectedOptionButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccentDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
        <item name="android:topLeftRadius">5dp</item>
    </style>

    <style name="AppTheme.GoToRegisterActivityButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
        <item name="android:topLeftRadius">5dp</item>
    </style>


</resources>
